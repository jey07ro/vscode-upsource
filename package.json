{
    "name": "vscode-upsource",
    "displayName": "Upsource for VSCode",
    "description": "Manage your Upsource Reviews in VSCode.",
    "version": "1.2.0",
    "publisher": "kasperbauer",
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": ["Other"],
    "activationEvents": [
        "onCommand:upsource.setup",
        "onCommand:upsource.openReviews",
        "onCommand:upsource.allReviews",
        "onCommand:upsource.createReview",
        "onCommand:upsource.closeReview",
        "workspaceContains:upsource.json"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "upsource.setup",
                "title": "Upsource: Setup"
            },
            {
                "command": "upsource.openReviews",
                "title": "Upsource: Show Open Reviews"
            },
            {
                "command": "upsource.allReviews",
                "title": "Upsource: Show All Reviews"
            },
            {
                "command": "upsource.createReview",
                "title": "Upsource: Create Review"
            },
            {
                "command": "upsource.closeReview",
                "title": "Upsource: Close Review"
            }
        ],
        "configuration": {
            "type": "object",
            "title": "Upsource configuration",
            "properties": {
                "upsource.checkForOpenReviewsOnLaunch": {
                    "type": "boolean",
                    "default": true,
                    "description": "Checks for open reviews on launch, if upsource.json is present"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "tsc -p ./",
        "compile": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.0.3",
        "vscode": "^1.0.0",
        "mocha": "^2.3.3",
        "@types/node": "^6.0.40",
        "@types/mocha": "^2.2.32"
    },
    "dependencies": {
        "@types/request": "0.0.43",
        "git-rev-sync": "^1.9.1",
        "opn": "^5.0.0",
        "request": "^2.81.0"
    }
}
